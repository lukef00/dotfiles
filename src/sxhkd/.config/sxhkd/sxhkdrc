super + Escape
    pkill -USR1 -x sxhkd

super + Return
    urxvt

# rofi
super + d
    rofi -show drun
super + w
    rofi -show window

# lock screen
super + shift + x 
    i3lock -fei ~/images/lockscreen.png

# music player daemon
super + F{9,10,11}
    mpc {prev,toggle,next}

# screenshots
{_,ctrl,shift} + Print
    ~/scripts/screenshot.sh {screen,window,selection}

# audio - speaker volume
{XF86AudioMute,XF86AudioLowerVolume,XF86AudioRaiseVolume}
    pamixer {-t,-d 5,-i 5 --allow-boost}
super + F{6,7,8}
    pamixer {-t,-d 5,-i 5 --allow-boost}

# audio - microphone
# super + XF86AudioLowerVolume pactl set-source-volume @DEFAULT_SOURCE@ -2% , spawn polybar-msg action microphone hook 0
# super + XF86AudioRaiseVolume pactl set-source-volume @DEFAULT_SOURCE@ +2% , spawn polybar-msg action microphone hook 0
# super + shift-F7 pactl set-source-volume @DEFAULT_SOURCE@ -2% , spawn polybar-msg action microphone hook 0
# super + shift-F8 pactl set-source-volume @DEFAULT_SOURCE@ +2% , spawn polybar-msg action microphone hook 0

# brightness
{XF86MonBrightnessDown,XF86MonBrightnessUp}
    xbacklight -{dec,inc} 10
super + F{2,3}
    xbacklight -{dec,inc} 10
